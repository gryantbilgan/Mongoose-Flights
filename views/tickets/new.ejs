<%- include('../partials/header') %>
<br><h2>If its got wings I can fly it...sometimes even if it doesn't</h2>
<form action="/flights/<%= flight._id %>/tickets" method="POST">
    <br><br>
    <label>Seat (Must be between A1-F9):</label>
    <input type="text" name="seat" required pattern="[A-F][1-9]\d?">
    <br><br>
    <label>Price:</label>
    <input type="number" name="price">
    <br><br>
    <label>Airport:
        <select name="airport">
            <option name="PDX">PDX</option>
            <option name="LAX">LAX</option>
            <option name="ORD">ORD</option>
            <option name="GRU">GRU</option>
            <option name="PAP">PAP</option>
        </select>
      </label>
      <br><br>
      <button type="submit">Add Ticket</button>
</form>

<%- include('../partials/footer') %>